<% if signed_in? %>
  <div data-role="header">
  	<%= link_to 'Back', :back, "data-icon" => "arrow-l", "data-iconpos" => "notext" %>
	<h2>Yanmar Quiz mobile</h2>
    <%= link_to "Home",    root_path, "data-icon" => "home", "data-iconpos" => "notext" %>
  </div>
<% else %>
  <div data-role="header">
  	<%= link_to "Home",    root_path %>
	<h2>Yanmar Quiz mobile</h2>
    <%= link_to "Sign in", signin_path %>
  </div>
<% end %>

<h2>Quiz Qn - mobile</h2>
    <%= @question.qn %>

<div data-role="controlgroup">
  <% %w(correct option1 option2 option3).shuffle.each do |b| %>
  <div data-role="button">
    <%= link_to @question.try(b), answer_path(:id => @question.id, :option => b) %>
  </div>
  <% end %>
</div>
  
<div data-role="footer">
  <div class="ui-grid-b">
    <div class="ui-block-a">
      <%= link_to "About",   about_path, "data-role" => "button" %>
    </div>
    <div class="ui-block-b">
      <%= link_to "Yanmar", "http://www.yanmar.co.jp/en/news/index.html", 
          :confirm=> "Leave this page?", "data-role" => "button" %>
    </div>
    <div class="ui-block-c">
      <%= link_to "Signout", signout_path, method: "delete", "data-role" => "button" %>
    </div>
  </div>
</div>