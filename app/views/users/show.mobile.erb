<% provide(:title, @user.name) %>
<div data-role="header">
  <%= link_to "Home", root_path, "data-role" => "button", "data-icon" => "home", "data-iconpos" => "notext" %>
  <h2>Yanmar Quiz mobile</h2>
  <% @question = Question.find(1) %>
  <%= link_to "Quiz", ask_path(:id => @question.id), "data-role" => "button", "data-icon" => "star" %>
</div>

<div data-role="content">
  <h1>
    <%= gravatar_for @user %>
    <%= @user.name %>
  </h1>
</div>

<%= render 'shared/stats' %>

<%= render 'follow_form' if signed_in? %>
<% if @user.microposts.any? %>
<div data-role="collapsible">
  <h3>Show Microposts (<%= @user.microposts.count %>)</h3>
  <ul data-role="listview">
    <%= render @microposts %>
  </ul>
  <%= will_paginate @microposts, 
	    renderer: WillPaginate::ActionView::JqueryMobilePaginateLinkRenderer,
		previous_label: 'Prev',
		next_label: 'Next'
		%>
</div>
  
<% end %>

<div data-role="footer">
</div>