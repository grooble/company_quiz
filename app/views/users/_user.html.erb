<li>
  <%= gravatar_for user, size: 52 %>
  <%= link_to user.name, user %>
  <% if current_user.admin? && !current_user?(user) %>
    <%= link_to t('control.delete'), user, method: :delete, data: { confirm: t('control.confirm') } %>
  <% end %>
  <div>
    <% if user.question_ids.count!=0 %>
      <%=t 'stats.tests' %><%= user.question_ids.count %>
    <% end %>
  </div>
</li>