<% provide(:title, @title) %>
<div class="row">
  <aside class="span4">
    <section>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
		  <span class="each_avatar">
		    <% if user.question_ids.count >= @user.question_ids.count  %>
              <div><%= link_to gravatar_for(user, size: 30), user %></div>
			  <div class="counter">
			    <%= user.question_ids.count if user.question_ids.count!=0 %>
			  </div>
			<% end %>
		  </span>
          <% end %>
        </div>
      <% end %>
    </section>
	
	<section>
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>
      <span><b>Microposts:</b> <%= @user.microposts.count %></span>
      <%= render 'shared/stats' %>
    </section>
	
    <section>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
		  <span class="each_avatar">
		    <% if user.question_ids.count < @user.question_ids.count  %>
              <div><%= link_to gravatar_for(user, size: 30), user %></div>
			  <div class="counter">
			    <%= user.question_ids.count if user.question_ids.count!=0 %>
			  </div>
			<% end %>
		  </span>
          <% end %>
        </div>
      <% end %>
    </section>
	
  </aside>
  <div class="span8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users">
        <%= render @users %>
      </ul>
      <%= will_paginate %>
	  <% end %>
  </div>
</div>