<% provide(:title, @title) %>
      <% if @users_over.any? %>
          <% @users_over.each do |user| %>
            <div><%= link_to gravatar_for(user, size: 30), user %></div>
			  <%= user.question_ids.count if user.question_ids.count!=0 %>
          <% end %>
      <% end %>
	  <% if !@users_over.any? %>
	    no users_over
	  <% end %>
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>show_follow<%= @user.id %>
      <%= link_to "view my profile", @user %>
      <b>Microposts:</b> <%= @user.microposts.count %>
      <%= render 'shared/stats' %>
      <% if @users_under.any? %>
          <% @users_under.each do |user| %>
		    <div><%= link_to gravatar_for(user, size: 30), user %></div>
			  <%= user.question_ids.count if user.question_ids.count!=0 %>
          <% end %>
      <% end %>
	
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users">
        <%= render @users %>
      </ul>
      <%= will_paginate @users, 
	    renderer: WillPaginate::ActionView::JqueryMobilePaginateLinkRenderer,
		previous_label: 'Prev',
		next_label: 'Next'
		%>
	<% end %>
	Users over: <% @users_over.each do |over| %>
	  <%= over.id %>,
	<% end %>