<% if signed_in? %>
  <div data-role="header">
    <% date = DateTime.current().to_i %>
  	<%= link_to t('header.settings'),    edit_user_path(current_user), "data-icon" => "edit", 
	    "data-mini" => "true", "timestamp" => date %>
	<h1><%=t 'header.title' %></h1>
    <% @question = Question.find(1) %>
    <%= link_to t('question.title'), ask_path(:id => @question.id), "data-icon" => "star", 
	    "data-mini" => "true", "rel" => "external" %>
  </div>
  <div data-role="content">
    <%= render 'shared/user_info' %>
  </div>

  <div data-role="content">
    <%= render 'shared/stats' %>
  </div>

  <div data-role="content">
    <%= render 'shared/micropost_form' %>
  </div>

  <div data-role="content">
	<%= render 'shared/take_test' %>
  </div>

<% else %>
<head>
  <style>
  #flying img{ 
    display: block;
    margin: 0 auto; 
	margin-top: 100px;
	margin-bottom: 100px
  }
  </style>
</head>
  <div data-role="header">
    <%= link_to t('header.join'), signup_path %>
	<h2><%=t 'title' %></h2>
    <%= link_to t('header.signin'), signin_path %>
  </div>
  <div id="flying">
    <%= link_to image_tag('quiz.jpg'), signin_path %>
  </div>
<% end %>

<%= render 'layouts/footer' %>