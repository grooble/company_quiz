  <% if current_user.admin? %>
  <% @question = Question.last() %>
  <div class="ui-grid-b">
    <div class="ui-block-a"><%= link_to "Take a Quiz", ask_path(:id => @question.id), "data-role" => "button" %></div>
    <div class="ui-block-b"><%= link_to "Make Question", make_path,  "data-role" => "button" %></div>
