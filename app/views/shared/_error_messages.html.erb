<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      <%=t 'error.error_msg_1' %><%= pluralize(object.errors.count, "error") %><%=t 'error.error_msg_1' %>
    </div>
    <ul>
    <% object.errors.full_messages.each do |msg| %>
      <li>* <%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>